    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug mysqld",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${workspaceFolder}/target/build/bin/mysqld",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "--defaults-file=${workspaceFolder}/target/etc/my.cnf",
                "--datadir=${workspaceFolder}/target/data"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
        }
    ]
}